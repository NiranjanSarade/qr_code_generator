<h1>QR code generator</h1>

<%= form_tag :qr_code_download, method: :get do |f| %>
  <div class="field">
    <%= label_tag 'Free Text or URL' %>
    <%= text_field_tag :content, nil, required: true %>
  </div>

  <br></br>

  <div class="actions">
    <%= submit_tag 'Generate QR code' %>
  </div>
<% end %>